<form action="/GamesView/{{Game.id}}/edit" method="POST">
  <label for="title">Title</label>
  <input type="text" name="title" value="{{Game.title}}" required />
  <label for="description">Description</label>
  <textarea name="description" required>{{Game.description}}</textarea>
  <label for="releaseDate">Date de sortie</label>
  <input type="date" name="releaseDate" value="{{Game.releaseDate}}" required />
  <label for="GenreId">Genre</label>
  <select name="GenreId" required>
    {{#each genres}}
      <option value="{{Gid}}" {{#if selected}}selected{{/if}}>{{name}}</option>
    {{/each}}
  </select>
  <label for="PublisherId">Publisher</label>
  <select name="PublisherId" required>
    {{#each Publishers}}
      <option value="{{Pid}}" {{#if selected}}selected{{/if}}>{{name}}</option>
    {{/each}}
  </select>
  <button type="submit">Update</button>
</form>